{
  "name": "server",
  "version": "1.0.0",
  "description": "",
  "main": "./src/index.ts",
  "scripts": {
    "db": "docker-compose up -d",
    "web-server": "nodemon ./src/index.js",
    "video-processor": "nodemon ./src/queue-server.js",
    "server": "concurrently \"node dist/index.js\" \"node dist/queue-server.js\"",
    "start": "npm run docker",
    "build": "npm install && npx tsc",
    "kill-web-server": "sudo lsof -PiTCP -sTCP:LISTEN | grep 8000 | awk '{print $2}' | xargs kill -9",
    "kill-video-processor": "sudo lsof -PiTCP -sTCP:LISTEN | grep 8001 | awk '{print $2}' | xargs kill -9",
    "kill-servers": "npm run kill-web-server && npm run kill-video-processor",
    "kill-db": "docker-compose down",
    "kill-all": "npm run kill-servers && npm run kill-db",
    "restart-servers": "npm run kill-servers && npm run server",
    "init-directories": "zx scripts/shell-script.mjs",
    "docker-build-and-run": "docker-compose up --build",
    "docker-build": "docker-compose build",
    "docker": "docker-compose up"
  },
  "keywords": [],
  "author": "Adwaitya Sadhukhan",
  "license": "ISC",
  "dependencies": {
    "@aws-sdk/client-s3": "^3.600.0",
    "aws-sdk": "^2.1644.0",
    "bullmq": "^5.8.2",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "events": "^3.3.0",
    "express": "^4.19.2",
    "ffmpeg-static": "^5.2.0",
    "fluent-ffmpeg": "^2.1.3",
    "mongodb": "^6.7.0",
    "mongoose": "^8.4.3",
    "multer": "^1.4.5-lts.1",
    "multer-s3": "^3.0.1",
    "socket.io": "^4.7.5",
    "winston": "^3.13.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/fluent-ffmpeg": "^2.1.24",
    "@types/multer": "^1.4.11",
    "@types/multer-s3": "^3.0.3",
    "@types/node": "^20.14.5",
    "@types/socket.io": "^3.0.2",
    "concurrently": "^8.2.2",
    "nodemon": "^3.1.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.4.5"
  }
}
